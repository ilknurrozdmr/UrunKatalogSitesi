@using UrunKatalog.MvcWebUı.Entity;
@model Product
@{
    ViewBag.Title = "Details";
}

<div id="product-details" class="container pb-5">
    <div class="row">
        <div class="col-md-6">
            <img src="/Upload/@Model.Image" class="img-fluid rounded">
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Name</h1>
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-md-12">
                    @if (Model.IsApproved)
                    {
                         <span class="badge badge-primary">Stokta</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Stokta Yok</span>
                    }
                    <span class="product-number">#259635</span>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                    <div id="description">
                        @Model.Description
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-4">
                    <img src="https://img.icons8.com/ios-filled/15/000000/star--v1.png" />
                    <img src="https://img.icons8.com/ios-filled/15/000000/star--v1.png" />
                    <img src="https://img.icons8.com/ios-filled/15/000000/star--v1.png" />
                    <img src="https://img.icons8.com/ios-filled/15/000000/star--v1.png" />
                    <img src="https://img.icons8.com/ios-filled/15/000000/star-half-empty.png" />
                    <span class="badge badge-success">5.3</span>
                </div>
                <div id="write-review" class="col-md-4">
                    <a href="#">Write a rewiew</a>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                    <h4 id="pruduct-price">@Model.Price TL</h4>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                    <button class="btn btn-success">
                        <img src="https://img.icons8.com/windows/30/ffffff/shopping-cart-loaded--v1.png" />
                        Add To Cart
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="bd-example bd-example-tabs">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
