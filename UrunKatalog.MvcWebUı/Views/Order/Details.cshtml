@model UrunKatalog.MvcWebUı.Models.OrderDetailsModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <di class="col-md-12">
            <h2>Sipariş Detay Bilgileri</h2>
            <hr />

            @if (TempData["message"] != null)
            {
                <div class="alert alert-success">
                    @TempData["message"]
                </div>
            }

                <dl class="row">

                    <dt class="col-sm-3">UserName</dt>
                    <dd class="col-sm-9">@Model.UserName<dd>

                    <dt class="col-sm-3">Order State</dt>
                    <dd class="col-sm-9">

                        @using (Html.BeginForm("UpdateOrderState", "Order", FormMethod.Post))
                        {
                            @Html.HiddenFor(i => i.OrderId)
                            <dl class="row">
                                <dt class="col-sm-8">
                                    @Html.EnumDropDownListFor(i => i.OrderState, "Select Order State", new { @class = "form-control" })
                                </dt>
                                <dd class="col-sm-4">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </dd>
                            </dl>


                        }

                    </dd>

                    <dt class="col-sm-3">Order Id</dt>
                    <dd class="col-sm-9">@Model.OrderId</dd>

                    <dt class="col-sm-3">Order Number</dt>
                    <dd class="col-sm-9">@Model.OrderNumber</dd>

                    <dt class="col-sm-3">Total</dt>
                    <dd class="col-sm-9">
                        <img src="https://img.icons8.com/material-outlined/16/000000/turkish-lira.png" />
                        @Model.Total
                    </dd>

                    <dt class="col-sm-3">Order Date</dt>
                    <dd class="col-sm-9">@Model.OrderDate</dd>


                    <dt class="col-sm-3">Teslimat Adresi</dt>
                    <dd class="col-sm-9">
                        @Model.AdresBasligi
                        <hr />
                        @Model.Adres
                        <br />
                        @Model.Sehir - @Model.Semt - @Model.Mahalle
                        <br />
                        @Model.PostaKodu
                    </dd>

                    <dt class="col-sm-3">Products</dt>
                    <dd class="col-sm-9">
                        <table class="table table bordered">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th style="width:45%;">Product Name</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th style="width:10%;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Orderlines)
                                {
                                    <tr>
                                        <td>
                                            <img src="/Upload/@item.Image" width="70" />
                                        </td>
                                        <td>
                                            @item.ProductName
                                        </td>
                                        <td>
                                            @item.Quantity
                                        </td>
                                        <td>
                                            <img src="https://img.icons8.com/material-outlined/16/000000/turkish-lira.png" />
                                            @item.Price
                                        </td>
                                        <td>
                                            <a href="/Home/Details/@item.ProductId" class="btn btn-primary btn-sm" target="_blank">
                                                <img src="https://img.icons8.com/external-flatart-icons-outline-flatarticons/18/FFFFFF/external-right-arrow-flatart-icons-outline-flatarticons-1.png" />
                                                Products Details
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </dd>
                </dl>
</div>
    </div>
</div>


